<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/barcode_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_scan"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_toolbar" />


    <ImageButton
        android:id="@+id/barcode_edit_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_scan"/>

    <TextView
        android:id="@+id/barcode_txt_assignment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"

        android:text="product for this barcode:"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_edit_button" />

    <Button
        android:id="@+id/barcode_btn_assign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#009688"

        android:text="Assign"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/barcode_txt_assignment"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/barcode_btn_unassign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#009688"

        android:text="unassign"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barcode_btn_assign" />

    <Button
        android:id="@+id/barcode_btn_addToInv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add To Inventory"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:backgroundTint="#009688"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/barcode_btn_assign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/barcode_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:text="Testname"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/barcode_product_has_barcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barcode_btn_addToInv"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/barcode_expand_collapse"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/barcode_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barcode_btn_addToInv" />

    <ImageView
        android:id="@+id/barcode_product_has_barcode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/barcode_product_name"
        app:layout_constraintEnd_toStartOf="@+id/barcode_expand_collapse"
        app:layout_constraintTop_toBottomOf="@+id/barcode_btn_addToInv"
        app:srcCompat="@drawable/ic_barcode_none" />

    <RelativeLayout
        android:id="@+id/barcode_detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_product_name">

        <TextView
            android:id="@+id/barcode_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="8dp"
            android:text="This product is used for testing purposes. This text has to be long enough, so it becomes multi-line"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>